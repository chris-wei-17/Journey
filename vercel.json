{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    },
    {
      "src": "api/[...all].ts",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/register",
      "dest": "/api/[...all]"
    },
    {
      "src": "/api/login", 
      "dest": "/api/[...all]"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/[...all]"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    }
  ],
  "outputDirectory": "dist/public"
}